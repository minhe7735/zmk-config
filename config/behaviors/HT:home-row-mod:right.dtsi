// Right hand home row mods
hmr: homerow_mods_right {
    compatible = "zmk,behavior-hold-tap";
    label = "HOMEROW_MODS_RIGHT";
    bindings = <&kp>, <&kp>;
    #binding-cells = <2>;
    flavor = "balanced";
    tapping-term-ms = <280>;
    require-prior-idle-ms = <250>;
    quick-tap-ms = <150>;
    hold-trigger-on-release;
    hold-trigger-key-positions = <KEYS_L THUMBS>;
};
