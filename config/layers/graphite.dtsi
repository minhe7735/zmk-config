graphite_layer {
    bindings = <
        &kp B              &kp L              &kp D               &kp W               &kp Z                   &kp APOS                   &kp F                      &kp O                      &kp U                      &kp J
        &hml LGUI N        &hml LALT R        &hml LSHFT T        &hml LCTRL S        &kp G                   &kp Y                      &hmr RCTRL H               &hmr RSHFT A               &hmr RALT E               &hmr RIGHT_GUI I
        &kp Q              &kp X              &kp M               &kp C               &kp V                   &kp K                      &kp P                      &kp COMMA                  &kp DOT                    &kp SEMI
                                              &mkp LCLK           &smart_shift        &lt SYM SPACE           &lt NUM BACKSPACE          &mt LS(LC(LEFT_ALT)) ENTER &mkp RCLK
    >;
};
